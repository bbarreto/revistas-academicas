<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mb-4">Revistas {{entity.title}}</h2>
      <h3>{{magazine.title}}</h3>
      {{#each magazine.content}}
      <h4>{{title}}</h4>
      <ul class="list-group mb-3">
      {{#each articles}}
        <li class="list-group-item">
          <strong>{{title}}</strong></a>
          {{#if authors}}<br/><small>{{authors}}</small>{{/if}}
          {{#if files}}<br/>
            {{#each files}}
            <a class="btn btn-sm btn-secondary" href="{{download}}">{{title}}</a>
            {{/each}}
          {{/if}}
        </li>
      {{/each}}
      </ul>
      {{/each}}
    </div>
  </div>
</div>
